{
    "roms_root_directory": "/home/aderumier/cursorscraper/roms",
    "media_root_directory": "media",
    "task_logs_directory": "var/task_logs",
    "cache_directory": "cache",
    "max_tasks_to_keep": 30,
    "server": {
        "host": "0.0.0.0",
        "port": 5000,
        "debug": false
    },
    "logging": {
        "level": "INFO",
        "file": "app.log"
    },
    "launchbox": {
        "mapping": {
            "Name": "name",
            "Overview": "desc",
            "Developer": "developer",
            "Publisher": "publisher",
            "Genres": "genre",
            "CommunityRating": "rating",
            "MaxPlayers": "players",
            "VideoURL": "youtubeurl"
        },
        "image_base_url": "https://images.launchbox-app.com/",
        "image_type_mappings": {
            "Box - Front": "extra1",
            "Box - Back": "boxback",
            "Box - 3D": "boxart",
            "Clear Logo": "marquee",
            "Screenshot - Game Title": "titleshot",
            "Screenshot - Gameplay": "screenshot",
            "Fanart - Background": "fanart",
            "Cart - Front": "cartridge"
        },
        "region": {
            "priority": [
                "World",
                "North America",
                "Europe",
                "Japan"
            ],
            "description": "Region priority order for image downloads. Images are selected by type and region priority, with only one image per type being downloaded."
        }
    },
    "media": {
        "mappings": {
            "videos": "video",
            "marquee": "marquee",
            "boxart": "boxart",
            "screenshots": "screenshot",
            "cartridges": "cartridge",
            "fanarts": "fanart",
            "titles": "titleshot",
            "manuals": "manual",
            "boxback": "boxback",
            "box2d": "extra1"
        },
        "extensions": {
            "videos": [
                ".mp4"
            ],
            "marquee": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "boxart": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "thumbnails": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "screenshots": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "cartridges": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "fanarts": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "titles": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "manuals": [
                ".pdf"
            ],
            "boxback": [
                ".png",
                ".jpg",
                ".jpeg"
            ],
            "box2d": [
                ".png",
                ".jpg",
                ".jpeg"
            ]
        },
        "scan_settings": {
            "recursive_search": true,
            "case_sensitive": false,
            "auto_update_gamelist": true
        }
    },
    "systems": {
        "mame": {
            "extensions": [
                ".zip",
                ".ZIP",
                ".7z",
                ".7Z"
            ],
            "launchbox": "Arcade",
            "igdb": "Arcade"
        },
        "nes": {
            "extensions": [
                ".nes",
                ".NES"
            ],
            "launchbox": "Nintendo Entertainment System",
            "igdb": "Nintendo Entertainment System"
        },
        "snes": {
            "extensions": [
                ".sfc",
                ".smc",
                ".SFC",
                ".SMC"
            ],
            "launchbox": "Super Nintendo Entertainment System",
            "igdb": "Super Nintendo Entertainment System"
        },
        "windows": {
            "extensions": [
                ".wsquashfs"
            ],
            "launchbox": "Windows",
            "igdb": "PC (Microsoft Windows)"
        },
        "gba": {
            "launchbox": "Nintendo Game Boy Advance",
            "extensions": [
                ".gba",
                ".GBA2"
