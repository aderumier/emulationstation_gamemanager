        },
        "image_type_mappings": {
            "cover": "extra1",
            "screenshots": "screenshot",
            "artworks": "fanart",
            "logos": "marquee"
        },
        "region_priority": [
            "World",
            "North America",
            "Europe",
            "Japan"
        ]
    }
