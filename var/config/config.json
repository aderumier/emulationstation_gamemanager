    "igdb": {
        "database_directory": "var/db/igdb",
        "enabled": true,
        "mapping": {
            "name": "name",
            "summary": "desc",
            "developer": "developer",
            "publisher": "publisher",
            "genre": "genre",
            "rating": "rating",
            "players": "players",
            "release_date": "releasedate",
